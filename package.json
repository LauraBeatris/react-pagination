{
  "name": "@lucasmogari/react-pagination",
  "version": "0.0.4",
  "description": "React hook for pagination",
  "main": "index.js",
  "module": "dist/react-pagination.mjs",
  "author": "Lucas Mogari <lucas@mogari.com.br>",
